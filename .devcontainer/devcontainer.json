{
	// make mounts work for both github codespace and local dev containers
	// https://github.com/microsoft/vscode-remote-release/issues/6844#issuecomment-1252288457
	// file must be executable
	"initializeCommand": [
		"./.devcontainer/initializeCommand.sh"
	],
	"name": "odoo-test",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg",
				"tomoki1207.pdf",
				"shd101wyy.markdown-preview-enhanced",
				"mechatroner.rainbow-csv",
				"GrapeCity.gc-excelviewer"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/bin/python3",
				"python.testing.pytestArgs": [
					"addons"
				],
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"sqltools.connections": [
					{
						"name": "Odoo database",
						"driver": "PostgreSQL",
						"previewLimit": 50,
						"server": "localhost",
						"port": 5432,
						"database": "odoodb",
						"username": "odoo",
						"password": "myodoo"
					}
				]
			}
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8069, 5432, 80
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// This is a workaround for local dev-containers failing to bind mount etc and addons
	"postCreateCommand": "sudo service odoo stop && if [ -z \"$(ls -A /mnt/extra-addons)\" ]; then sudo ln -snf ${localWorkspaceFolder}/addons/* /mnt/extra-addons; fi && sudo cp ${localWorkspaceFolder}/odoo/config/odoo.conf /etc/odoo/ && sudo pip3 install -r ${localWorkspaceFolder}/requirements.txt  &&  sudo service odoo start",

	"remoteUser": "odoo",
	"portsAttributes": {
		"80": {
			"label": "pgAdmin4"
		},
		"5432": {
			"label": "PostgresSQL"
		},
		"8069": {
			"label": "Odoo"
		}
	}
}