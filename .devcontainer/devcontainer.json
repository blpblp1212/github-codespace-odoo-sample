{
	// make mounts work for both github codespace and local dev containers
	// https://github.com/microsoft/vscode-remote-release/issues/6844#issuecomment-1252288457
	// file must be executable
	"initializeCommand": [
		"./.devcontainer/initializeCommand.sh"
	],
	"name": "odoo-test",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.autopep8",
				"charliermarsh.ruff",
				"njpwerner.autodocstring",
				"dbaeumer.vscode-eslint",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg",
				"tomoki1207.pdf",
				"shd101wyy.markdown-preview-enhanced",
				"mechatroner.rainbow-csv",
				"GrapeCity.gc-excelviewer"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/bin/python3",
				"python.analysis.extraPaths": ["odoo/src"],
				"python.testing.pytestArgs": [
					"addons"
				],
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"python.formatting.provider": "autopep8",
				"ruff.lint.args": [
					"--ignore E501,E301,E302"
				],
				"eslint.options": {
					"overrideConfigFile": ".eslintrc.json"
				},
				"eslint.alwaysShowStatus": true,
				"sqltools.connections": [
					{
						"name": "Odoo database",
						"driver": "PostgreSQL",
						"previewLimit": 50,
						"server": "localhost",
						"port": 5432,
						"database": "odoodb",
						"username": "odoo",
						"password": "myodoo"
					}
				]
			}
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8069,
		5432,
		80
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// file must be executable
	"postCreateCommand": "./.devcontainer/postCreateCommand.sh",
	"postAttachCommand": "bash",
	"remoteUser": "odoo",
	"portsAttributes": {
		"80": {
			"label": "pgAdmin4"
		},
		"5432": {
			"label": "PostgresSQL"
		},
		"5678": {
			"label": "debugPy Odoo"
		},
		"8069": {
			"label": "Odoo"
		}
	}
}